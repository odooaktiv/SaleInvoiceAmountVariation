<odoo>
	<template id="account_invoice_report_inherit_report" inherit_id="account.report_invoice_document">
	    <xpath expr="//table[1]/thead/tr/th[4]" position="after">
	        <th class="text-right">Sale Price</th>
	        <th class="text-right">Difference</th>
	        <th class="text-right">User</th>
	    </xpath>
	    <xpath expr="//table[1]/tbody/tr/td[4]" position="after">
	    	<td class="text-right">
                <span t-field="l.sale_price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
            </td>
            <td class="text-right">
            	<span t-field="l.diff"/>
            </td>
            <td class="text-right">
            	<span t-field="o.user_id.name"/>
            </td>
	    </xpath>
	</template>
</odoo>